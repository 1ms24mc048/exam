pipeline {
    agent any

    environment {
        IMAGE_NAME = "1ms24mc048/exam1"
        DOCKERHUB_CREDENTIALS = credentials('dockerhubID')
    }
    triggers {
        cron ('* * * * *')
    }

    stages {

        stage('Checkout git') {
            steps {
                git(
                    url: 'https://github.com/1ms24mc048/exam',
                    branch: 'main',
                    credentialsId : 'dockerhubID'
                )
            }
        }

        stage('Build docker image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhubID') {
                        dockerImage.push()
                    }
                }
            }
        }   
    }
}
